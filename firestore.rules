rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() {
      return request.auth != null;
    }

    function isValidExpense() {
      let data = request.resource.data;
      return data.amount is number
        && data.amount > 0
        && data.createdAt is timestamp
        && data.createdBy is string
        && data.createdBy == request.auth.uid;
    }

    match /expenses/{expenseId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isValidExpense();
      allow update: if isAuthenticated() 
        && isValidExpense()
        && resource.data.createdBy == request.auth.uid;
      allow delete: if isAuthenticated();
    }

    match /config/budget {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated()
        && request.resource.data.monthlyAllocation is number
        && request.resource.data.weeklyTarget is number
        && request.resource.data.monthlyAllocation > 0
        && request.resource.data.weeklyTarget > 0;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
